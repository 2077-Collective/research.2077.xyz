---
import { ViewTransitions } from 'astro:transitions'

interface Props {
    title: string
    description: string
    slug?: string
    ogImage?: URL
}

Astro.props.ogImage ??= new URL(
    `${Astro.url.origin}/assets/EIPsForNerds7-EIP-7657(SyncCommitteeSlashings).webp`,
)

const { title, description, ogImage, slug } = Astro.props
---

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <meta name="title" content={`${title}`} />
    <meta name="description" content={description} />

    <!-- OG meta tags -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter meta tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:url" content={`https://research.2077.xyz/${slug}`} />
    <meta name="twitter:site" content="@2077Research" />

    <!-- General meta tags -->
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="description" content={description} />

    <link rel="icon" type="image/svg" href="/favicon.svg" />

    <!--Prism setup -->
    <link rel="stylesheet" type="text/css" href="/src/styles/prism.css" />

    <script is:inline>
        import Prism from '/src/scripts/prism.js'
        Prism.highlightAll()
    </script>
    <!-- -->

    <script
        is:inline
        defer
        data-domain="research.2077.xyz"
        src="https://plausible.io/js/script.outbound-links.js"></script>

    <title>{title}</title>

    <ViewTransitions />
</head>

<style is:global>
    body {
        background: white;
        color: black;
        padding-block-start: 0;
        font-family: 'avenir-book', sans-serif;
        line-height: 1.7;
    }
</style>
